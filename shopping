shopping_list = list()

print "What should we pick up at the store?"
print "Add an item, when done enter 'DONE'"

while True:
    new_item = raw_input("> ")

    if new_item == 'DONE':
        break

    shopping_list.append(new_item)
    print "Added! List has %s items." % (len(shopping_list))
    continue

print ("Here is your list:")

for item in shopping_list:
    print item
       
